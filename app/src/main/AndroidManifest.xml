<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="jp.ac.dhw.a18dc593.staffshiftmanagement">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CompanyDetailActivity" />
        <activity android:name=".UserDetailActivity" />
        <activity android:name=".UserListActivity" />
        <activity android:name=".UserEditActivity" />
        <activity android:name=".UserSettingActivity" />
        <activity android:name=".UserRegisterActivity" />
        <activity android:name=".LogInActivity" />
        <activity android:name=".ShiftDateActivity" />
        <activity android:name=".ShiftDetailActivity" />
        <activity android:name=".ShiftEditActivity" />
        <activity android:name=".ShiftListActivity" />
        <activity android:name=".ShiftRegisterActivity" />
    </application>

</manifest>